---
interface Props {
	tags: Array<string>;
}

const { tags } = Astro.props;
---

<div class="group relative inline-flex items-center">
	<div class="cursor-pointer">
		<svg
			aria-hidden="true"
			class="inline-block h-6 w-6"
			fill="none"
			focusable="false"
			stroke="currentColor"
			stroke-linecap="round"
			stroke-linejoin="round"
			stroke-width="1.5"
			viewBox="0 0 24 24"
			xmlns="http://www.w3.org/2000/svg"
		>
			<path d="M0 0h24v24H0z" fill="none" stroke="none"></path>
			<path
				d="M7.859 6h-2.834a2.025 2.025 0 0 0 -2.025 2.025v2.834c0 .537 .213 1.052 .593 1.432l6.116 6.116a2.025 2.025 0 0 0 2.864 0l2.834 -2.834a2.025 2.025 0 0 0 0 -2.864l-6.117 -6.116a2.025 2.025 0 0 0 -1.431 -.593z"
			></path>
			<path d="M17.573 18.407l2.834 -2.834a2.025 2.025 0 0 0 0 -2.864l-7.117 -7.116"></path>
			<path d="M6 9h-.01"></path>
		</svg>
	</div>

	<div class="ml-2 inline-flex items-center space-x-2">
		{
			tags.map((tag, index) => (
				<div
					class={`
              font-medium transition-all duration-500 ease-in-out
              md:translate-x-[-15px] md:scale-95 md:opacity-0 md:blur-[4px]
              md:group-hover:translate-x-0 md:group-hover:scale-100 md:group-hover:opacity-100 md:group-hover:blur-none
            `}
				>
					<a
						aria-label={`View more blogs with the tag ${tag}`}
						href={`/tags/${tag}/`}
						data-pagefind-filter="tag"
						class={`
              kwicherbelliaken-link
            `}
						style={{
							transitionDelay: `${(index + 1) * 80}ms`,
						}}
					>
						{tag}
					</a>
					{index < tags.length - 1 && <span class="ml-2 text-gray-500">Â·</span>}
				</div>
			))
		}
	</div>
</div>
